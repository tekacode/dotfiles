{
  // Editor activity and task bar colors
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#beaf00",
    "activityBar.background": "#beaf00",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#bffffa",
    "activityBarBadge.foreground": "#15202b",

    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#beaf00",

    "statusBar.background": "#8b800099",
    "statusBar.foreground": "#ffffff",
    "statusBarItem.hoverBackground": "#beaf00",
    "statusBarItem.remoteBackground": "#8b8000",
    "statusBarItem.remoteForeground": "#e7e7e7",

    "titleBar.activeBackground": "#8b8000",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#beaf0099",
    "titleBar.inactiveForeground": "#e7e7e799"
  }
  // Editor
  "editor.tabSize": 2,
  "editor.fontFamily": "JetBrains Mono",
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestionsDelay": 12,
  "editor.accessibilityPageSize": 18,
  "editor.fontSize": 18,
  "editor.accessibilitySupport": "off",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.suggest.showMethods": true,
  "editor.suggest.preview": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "top",
  "editor.guides.bracketPairs": true,
  // Terminal
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.allowChords": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontSize": 18,
  // Vim
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": ["<leader>", "<leader>", "s"],
      "before": ["s"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["bookmarks.jumpToNext"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["bookmarks.jumpToPrevious"]
    }
  ],
  "vim.smartRelativeLine": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  // Emmet
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.excludeLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  // Html
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  // Workbench
  "workbench.startupEditor": "none",
  "workbench.panel.defaultLocation": "right",
  "workbench.settings.applyToAllProfiles": ["maven.executable.path"],
  "workbench.colorTheme": "Solarized Dark",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.sideBar.location": "right",

  "window.zoomLevel": 2,
  "keyboard.dispatch": "keyCode",
  "diffEditor.ignoreTrimWhitespace": false,
  "git.ignoreMissingGitWarning": true,
  "debug.onTaskErrors": "debugAnyway",
  "explorer.openEditors.visible": 8,
  "json.schemas": [],
  "files.exclude": {
    //hides files in explorer view of th editor
    "**/.project": true,
    "**/.settings": true,
    "**/.classpath": true,
    "**/.factorypath": true
  },

  "breadcrumbs.enabled": false,
  "redhat.telemetry.enabled": false,

  "git.openRepositoryInParentFolders": "never",
  "editor.tokenColorCustomizations": {
    //customize syntax highlighting and other text styling properties for specific code tokens or TextMate scopes.
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "name": "One Dark italic",
        "scope": [
          "comment",
          "entity.other.attribute-name",
          "keyword",
          "markup.underline.link",
          "storage.modifier",
          "storage.type",
          "string.url",
          "variable.language.super",
          "variable.language.this"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "name": "One Dark italic reset",
        "scope": [
          "keyword.operator",
          "keyword.other.type",
          "storage.modifier.import",
          "storage.modifier.package",
          "storage.type.built-in",
          "storage.type.function.arrow",
          "storage.type.generic",
          "storage.type.java",
          "storage.type.primitive"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "files.autoSave": "afterDelay",
  "hediet.vscode-drawio.resizeImages": null,
  "chatgpt.lang": "en",
  "findJump.excludeNextChars": 1
}
